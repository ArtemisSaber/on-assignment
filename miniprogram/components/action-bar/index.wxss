@import '/static/iconfont/iconfont.wxss';
.action-bar {
    background-color: #fff;
    position: fixed;
    bottom: 0;
    padding-bottom: 24px;
    padding-left: 40rpx;
    padding-right: 40rpx;
    padding-top: 40rpx;
    box-sizing: border-box;
    width: 100%;
    box-shadow: 0px -1px 10px 1px rgba(0, 0, 0, 0.1);
    z-index: 50;
}

.actions {
    display: flex;
    justify-content: space-between;
}

.btn {
    display: flex;
    height: 48px;
    border-radius: 24px;
    width: 125px;
    justify-content: center;
    align-items: center;
}
.btn-secondary {
    color: #000;
    background-color: #fff;
    border: 1px solid #000;
    box-sizing: border-box;
}

.btn-primary {
    color: #fff;
    background-color: #000;
}
.icon {
    width: 24px;
    height: 24px;
    display: block;
    font-size: 24px;
}
.icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
}
